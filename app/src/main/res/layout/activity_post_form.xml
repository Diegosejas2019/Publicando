<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".PostFormActivity">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completa los campos"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:hint="Celular (WhatsApp)"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/borderwhite"
                android:focusedByDefault="false"
                android:focusableInTouchMode="true"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:hint="TelÃ©fono fijo (Opcional)"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/borderwhite"
                android:focusedByDefault="false"
                android:focusableInTouchMode="true"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:hint="Contanos lo que ofreces"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/borderwhite"
                android:focusedByDefault="false"
                android:focusableInTouchMode="true"
                android:lines="8"
                />

            <Button
                android:id="@+id/postformnext"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="40dp"
                android:text="SIGUIENTE"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"

                android:background="@color/colorNaranja"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:alpha=".5"
                android:layout_above="@id/dotsLayout"
                android:background="@color/colorWhite"
                android:layout_marginBottom="15dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dotsLayout"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>