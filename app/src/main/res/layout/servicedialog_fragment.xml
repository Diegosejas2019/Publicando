<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        tools:context=".activitys.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/elegi"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/comidas"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtOlvidoContraseña"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:textColor="#0072BB"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Olvidó la contraseña?"
                    android:textStyle="bold"
                    android:layout_weight="0.35" />
                <TextView
                    android:id="@+id/txtRegistrarse"
                    style="?android:textAppearanceSmall"
                    android:layout_width="323dp"
                    android:textColor="#0072BB"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="Crea aqui tu cuenta MitraPharma"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_weight="0.38" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/action_ok"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="10dp"
                    android:background="#4a89dc"
                    android:text="@string/action_sign_in"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/action_cancel"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_marginLeft="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:background="#4a89dc"
                    android:text="@string/action_sign_in"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
